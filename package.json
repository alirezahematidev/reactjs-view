{
  "name": "plusweb",
  "version": "0.0.1",
  "private": true,
  "description": "React-native View implementation for web",
  "workspaces": {
    "packages": [
      "packages/baseComponent",
      "packages/baseCore",
      "packages/baseAsset",
      "src/web",
      "src/stories"
    ]
  },
  "scripts": {
    "compile": "tsc -b",
    "start": "concurrently \"yarn workspace web watch\" \"yarn workspace reactjs-view watch\" \"yarn workspace reactjs-view-core watch\" --kill-others",
    "build": "yarn lerna-clean && yarn lerna-build && yarn workspace web build",
    "lint": "eslint . --ext tsx,ts  --fix",
    "lint-commit": "cross-env COMMIT=true eslint . --ext tsx,ts  --fix",
    "test": "yarn lerna-clean && yarn lerna-build && yarn workspace web test",
    "prettierAll": "prettier --write .",
    "storybook": "concurrently \"start-storybook --no-manager-cache -p 6006 -s src/web/public\" \"yarn workspace reactjs-view watch\" \"yarn workspace reactjs-view-core watch\" --kill-others",
    "build-storybook": "yarn lerna-clean && yarn lerna-build && build-storybook -s src/web/public",
    "zeplin": "zeplin connect",
    "release": "yarn lerna-clean && yarn lerna-build && yarn lint-commit && yarn compile && yarn workspace web test -- --watchAll=false --silent && npx lerna publish",
    "lerna-build": "lerna run compile --stream",
    "lerna-clean": "lerna run clean --parallel"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^14.1.0",
    "@storybook/node-logger": "^6.3.12",
    "@types/node": "^15.0.2",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.0",
    "@types/react-test-renderer": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "commitlint": "^14.1.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest-watch-typeahead": "^0.6.2",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1",
    "prettier-plugin-jsdoc": "^0.3.24",
    "prettier-plugin-organize-imports": "^2.3.4",
    "rimraf": "^3.0.2",
    "sass-loader": "^12.3.0"
  },
  "dependencies": {
    "@sentry/browser": "^5.21.1",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-backgrounds": "^6.3.12",
    "@storybook/addon-docs": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-knobs": "^6.3.1",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/addon-storysource": "^6.3.12",
    "@storybook/addons": "^6.3.12",
    "@storybook/api": "^6.3.12",
    "@storybook/core-events": "^6.3.12",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.3.12",
    "@storybook/theming": "^6.3.12",
    "react-test-renderer": "^17.0.2",
    "storybook-addon-locale": "^0.3.6",
    "storybook-addon-themes": "^6.1.0",
    "storybook-rtl-addon": "^0.3.3",
    "typescript": "^4.3.5"
  },
  "keywords": [],
  "author": "hosseinm.developer@gmail.com",
  "license": "ISC",
  "publishConfig": {
    "registry": "http://192.168.1.48:8081/repository/plus-repository/"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}